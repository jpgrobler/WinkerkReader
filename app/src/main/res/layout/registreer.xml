<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="12dp"
    android:scrollbars="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textIsSelectable="true"
            android:id="@+id/reg_about"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <TextView
    android:textColor="@android:color/holo_red_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="@string/registreer_titel"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/registreer_naam"/>
    <EditText
        android:id="@+id/reg_naam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/registreer_van"/>
        <EditText
            android:id="@+id/reg_van"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/registreer_epos"/>
        <EditText
            android:id="@+id/reg_epos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/registreer_selfoon"/>
        <EditText
            android:id="@+id/reg_selno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/registreer_gemeente"/>
        <EditText
            android:id="@+id/reg_gemeente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/registreer_gemeente_epos"/>
            <EditText
                android:id="@+id/reg_gemeente_epos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/registreer_opdateer" />
        <ImageView
            android:layout_marginStart="50dp"
            android:id="@+id/reg_opdateer"
            android:src="@drawable/update"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tooltipText="Opdateer info" />
    </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">
            <ProgressBar
                android:id="@+id/reg_indeterminateBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registreer_status"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/reg_reg"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:visibility="visible"
                android:layout_below="@+id/reg_indeterminateBar"/>
            <ProgressBar
                android:id="@+id/reg_indeterminateBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/reg_reg"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/registreer_via"
            android:textColor="@android:color/holo_red_dark"/>
        <ImageView
            android:layout_marginStart="50dp"
            android:id="@+id/reg_stuur_epos"
            android:src="@drawable/email2"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:tooltipText="Stuur E-pos vir registrasie kode" />
        <ImageView
            android:layout_marginStart="50dp"
            android:id="@+id/reg_stuur_sms"
            android:src="@drawable/sms2"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:tooltipText="Stuur SMS vir registrasie kode" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:text="@string/registreer_voerin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/kodetextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/redistreer_kode"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/reg_kode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/reg"
            android:layout_toEndOf="@id/kodetextview"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:text="@string/redistreer_kode2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/reg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/yes"
            android:tooltipText="Registreer"
            android:visibility="invisible" />

    </RelativeLayout>
        <EditText
            android:layout_below="@+id/reg"
            android:id="@+id/WinkerkReaderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
</LinearLayout>
</ScrollView>