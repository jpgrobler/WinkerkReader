<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/sms_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/sms_cancel"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_close" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/lys_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_groep_telling"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textAlignment="center" />
                <ImageView
                android:id="@+id/sms_stuur"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="3dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/sms_empty" />

            </RelativeLayout>
            <TextView
                android:id="@+id/sms_char_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sms_groep_letters"
                android:textAlignment="center" />

        </LinearLayout>

    <TextView
        android:id="@+id/groep_sms_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meelewingLysTitel"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />
        <EditText
            android:id="@+id/sms_boodskap"
            android:layout_below="@+id/groep_sms_titel"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/smstip"
            android:layout_toStartOf="@+id/sms_buttons"
            android:background="@drawable/border"
            android:maxLength="160"
            android:inputType="textMultiLine"/>
        <TextView
            android:id="@+id/smstip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/sms_buttons"
            android:text="@string/smstiptext"/>
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/smstip"></ListView>
    </RelativeLayout>
