<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemmain"
            xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:padding="4dp">
    <LinearLayout
        android:id="@+id/list_seperatorBlok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderseparator"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_alignParentStart="true"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/list_separator"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_alignParentEnd="true"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Wyk"
            android:textAlignment="viewEnd"
            android:id="@+id/list_separatorwyk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <FrameLayout
        android:id="@+id/kontak_frame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp">
        <ImageView
            android:id="@+id/list_kontak_foto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kontaks"
            android:layout_gravity="center_horizontal|center_vertical"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/circle_crop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle_crop" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main">
        <RelativeLayout
            android:id="@+id/topRow"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_name"
                tools:text="@string/list_naam"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#0B3466"/>

            <TextView
                android:id="@+id/list_van"
                tools:text="@string/list_van"
                android:ellipsize="none"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#2B3D4D"
                android:layout_toStartOf="@+id/list_ouderdom_blok"
                android:layout_toEndOf="@+id/list_name" />
            <LinearLayout
                android:id="@+id/list_ouderdom_blok"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_toStartOf="@+id/list_verjaar"
                    android:id="@+id/list_bday"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bday"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="4dp" />
                <TextView
                    android:id="@+id/list_verjaar"
                    tools:text="@string/list_verjaar"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/list_ouderdom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#2B3D4D"/>
                <TextView
                    android:id="@+id/list_ouderdom"
                    tools:text="0"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/holo_blue_dark" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomRow"
            android:layout_below="@+id/topRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/list_cellBlock"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/list_wykblok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/cellimage"
                    android:layout_width="16dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/cell3"/>
                <TextView
                    android:id="@+id/list_cellnumber"
                    tools:text="@string/list_selfoon"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_toStartOf="@+id/list_huwelikblok"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/holo_blue_dark" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/list_cellBlock"
                android:id="@+id/list_telBlock"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:scaleType="centerInside"
                    android:id="@+id/list_telefoonicon"
                    android:src="@mipmap/oldphone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/list_landlyn"
                    tools:text="@string/list_telefoon"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_toStartOf="@+id/list_cellBlock"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_huwelikblok"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/list_ring"
                        android:layout_toLeftOf="@+id/list_huwelik"
                        android:layout_marginRight="4dp"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@drawable/married"/>
                    <TextView
                        android:id="@+id/list_huwelik"
                        tools:text="0"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@android:color/holo_purple" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_wykblok"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/list_huwelikblok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerInside"
                    android:id="@+id/list_whatsapp"
                    android:src="@drawable/whatsapp"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/list_epos"
                    android:layout_marginEnd="8dp"/>
                <ImageView
                    android:scaleType="centerInside"
                    android:layout_below="@id/list_huwelik"
                    android:id="@+id/list_epos"
                    android:src="@mipmap/email2"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/list_wyk"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/list_wyk"
                    tools:text="@string/list_wyk"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif"
                    android:textAppearance="?android:textAppearanceSmallInverse"
                    android:textColor="@android:color/holo_orange_dark" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>