<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/widget_belydenis_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_belydenis_title"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:contentDescription="@string/widget_belydenis_title" />

    <TextView
        android:id="@+id/widget_belydenis_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/widget_belydenis_loading"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:contentDescription="@string/widget_belydenis_content_desc" />

    <TextView
        android:id="@+id/widget_belydenis_update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_last_updated"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:gravity="center"
        android:alpha="0.7" />

</LinearLayout>
