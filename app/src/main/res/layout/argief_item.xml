<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/argief_itemmain"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:padding="4dp">
    <TextView
        android:id="@+id/argief_list_separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderseparator"
        android:padding="3dp"
        android:text="New Text"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/argief_main">
            <RelativeLayout
                android:id="@+id/topRow"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/argief_van"
                    tools:text="@string/argief_van"
                    android:ellipsize="none"
                    android:singleLine="false"
                    android:scrollHorizontally="false"
                    android:layout_centerVertical="true"
                    android:paddingEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#2B3D4D"
                 />
                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/argief_geboortedatum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:fontFamily="sans-serif-medium"
                    android:paddingEnd="8dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#009688"
                    tools:text="@string/argief_geboorte" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topRow"
                android:id="@+id/middleRow">
                <TextView
                    android:id="@+id/argief_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-medium"
                    android:paddingEnd="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#0B3466"
                    tools:text="@string/argief_naam" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottomRow"
                android:layout_below="@+id/middleRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/argief_rede"
                        tools:text="@string/argief_rede"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/holo_blue_dark" />
                    <TextView
                        android:id="@+id/argief_vertrekdatum"
                        tools:text="@string/argief_vertrek"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:layout_toEndOf="@+id/argief_rede"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="bottom|right"
                        android:id="@+id/argief_bestemming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:paddingStart="4dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorPrimary"
                        tools:text="@string/argief_bestemming" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>